<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="UI"/>

    <SwitchPreference
        android:key="pref_allowRotation"
        android:title="@string/allow_rotation_title"
        android:defaultValue="@bool/allow_rotation"
        android:persistent="true"/>

    <SwitchPreference
        android:key="pref_show_caret"
        android:title="Show All Apps Handle"
        android:summary="App restart required"
        android:defaultValue="true"
        android:persistent="true"
        android:enabled="false"/>

    <SwitchPreference
        android:key="pref_qsbOnFirstScreen"
        android:title="[BROKEN] Show Quick Searchbar on the first screen"
        android:summary="App restart required"
        android:defaultValue="true"
        android:persistent="true"
        android:enabled="false"/>

    <SwitchPreference
        android:key="pref_lightStatusBar"
        android:title="Light StatusBar"
        android:summary="When enabled the status bar may show dark icons based on the top of the wallpaper."
        android:defaultValue="false"
        android:persistent="true" />

    <ListPreference
        android:key="pref_numCols"
        android:title="Number of columns"
        android:entries="@array/numColsTexts"
        android:entryValues="@array/numColsValues"/>

    <ListPreference
        android:key="pref_numRows"
        android:title="Number of rows"
        android:entryValues="@array/numRowsValues"
        android:entries="@array/numRowsTexts"/>

    <ListPreference
        android:key="pref_iconSize"
        android:title="Icon size"
        android:entryValues="@array/iconSizeValues"
        android:entries="@array/iconSizeTexts"/>

    <ListPreference
        android:key="pref_iconTextSize"
        android:title="Icon text size"
        android:entryValues="@array/iconTextSizeValues"
        android:entries="@array/iconTextSizeTexts"/>

    <PreferenceCategory
        android:title="Behavior"/>

    <SwitchPreference
        android:key="pref_pinchToOverview"
        android:title="Pinch to Overview"
        android:summary="Pinch on the Homescreen to open the overview"
        android:defaultValue="true"
        android:persistent="true" />

</PreferenceScreen>
