<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="UI"/>

    <EditTextPreference
        android:key="prefs_iconPackPackage"
        android:title="Icon Pack"
        android:defaultValue="@string/default_icon_pack"
        android:persistent="true"/>

    <SwitchPreference
        android:key="pref_lightStatusBar"
        android:title="Light StatusBar"
        android:summary="When enabled the status bar may show dark icons based on the top of the wallpaper."
        android:defaultValue="false"
        android:persistent="true" />

    <ListPreference
        android:key="pref_numCols"
        android:title="Number of columns"
        android:entries="@array/numColsTexts"
        android:entryValues="@array/numColsValues"
        android:persistent="true"/>

    <ListPreference
        android:key="pref_numRows"
        android:title="Number of rows"
        android:entryValues="@array/numRowsValues"
        android:entries="@array/numRowsTexts"
        android:persistent="true"/>

    <ListPreference
        android:key="pref_numRows"
        android:title="Number of icons in hotseat"
        android:entryValues="@array/numHotseatIconsValues"
        android:entries="@array/numHotseatIconsTexts"
        android:persistent="true"/>

    <ListPreference
        android:key="pref_iconScale"
        android:title="Icon scale"
        android:entryValues="@array/iconScaleValues"
        android:entries="@array/iconScaleTexts"
        android:defaultValue="@string/defaultIconScale"
        android:persistent="true"/>

    <ListPreference
        android:key="pref_iconTextScale"
        android:title="Icon text scale"
        android:entryValues="@array/iconScaleValues"
        android:entries="@array/iconScaleTexts"
        android:defaultValue="@string/defaultIconScale"
        android:persistent="true"/>

    <PreferenceCategory
        android:title="Behavior"/>

    <SwitchPreference
        android:key="pref_pinchToOverview"
        android:title="Pinch to Overview"
        android:summary="Pinch on the Homescreen to open the overview"
        android:defaultValue="true"
        android:persistent="true" />

    <SwitchPreference
        android:key="pref_pulldownSearch"
        android:title="Pulldown to Search"
        android:summary="When enabled fling down gesture on the first workspace triggers search."
        android:defaultValue="true"
        android:persistent="true" />

    <SwitchPreference
        android:key="pref_showHidden"
        android:title="Show Hidden Apps"
        android:summary="When enabled hidden apps will be shown to change visibility settings"
        android:defaultValue="false"
        android:persistent="true" />

</PreferenceScreen>
